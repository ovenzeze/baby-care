//section1
#fullpage
  padding-top: 0.8rem

.swiper-container
  width: 100%
  height: 3rem
  height: 3rem
  background-color: #30aed6
  .swiper-slide
    width: 100%
    height: 3rem
    overflow: hidden
    img
      width: 100%
      height: 100%
//section1 end
//section2
.section2
  .main
    text-align: center
    margin: 0 auto
    width: 100%
    .title
      margin: 0.3rem auto
      text-align: center
      position: relative
      z-index: -3
      h3
        color: #474747
        font-size: 0.4rem
      p
        margin-top: 0.3rem
        margin-bottom: 0.3rem
        color: rgba(234, 177, 69, 1)
        font-size: 0.2rem
    .kinder
      display: inline-block
      border-radius: 50%
      width: 2.5rem
      height: 2.5rem
      float: left
      margin-left: 0.4rem
      position: relative
      background: rgba(234, 177, 69, 0.5)
      &:hover
        box-shadow: 1px 1px 30px rgba(0, 0, 0, 0.5)
      .content
        margin: 10% auto
        width: 60%
        text-align: center
        h3
          font-size: 0.3rem
          color: #474747
        ul
          width: 100%
          height: 60%
          margin-top: 20%
          li
            height: 0.3rem
            line-height: 0.3rem
            font-size: 0.2rem
            background: rgba(234, 177, 69, 0.8)
            border-radius: 0.4rem
            margin-top: 0.2rem
            transition: 0.5s
            &:hover
              box-shadow: 1px 1px 15px rgba(0, 0, 0, 1)

    .earlyedu
      display: inline-block
      border-radius: 50%
      width: 2.5rem
      height: 2.5rem
      float: right
      margin-right: 0.4rem
      position: relative
      background: rgba(234, 177, 69, 0.5)
      &:hover
        box-shadow: 1px 1px 30px rgba(0, 0, 0, 0.5)
      .content
        margin: 10% auto
        width: 60%
        height: 70%
        text-align: center
        h3
          font-size: 0.3rem
          color: #474747
        ul
          width: 100%
          height: 60%
          margin-top: 20%
          li
            height: 0.3rem
            line-height: 0.3rem
            font-size: 0.2rem
            background: rgba(234, 177, 69, 0.8)
            border-radius: 35px
            margin-top: 0.2rem
            transition: 0.5s
            &:hover
              box-shadow: 1px 1px 15px rgba(0, 0, 0, 1)

//section2 end
//section3
.section3
  .main
    width: 100%
    margin: 0.5rem auto
    h1
      text-align: center
      font-size: 0.4rem
      margin-bottom: 0.1rem
      margin-top: 0.2rem
    p
      margin-top: 0.3rem
      margin-bottom: 0.3rem
      margin: 0.3rem auto
      text-align: center
      color: rgba(234, 177, 69, 1)
      font-size: 0.2rem
    img
      width: 100%
      height: 100%

//section3 end
//section4
.subject-system
  h1
    text-align: center
    margin-top: 0.2rem
  p
    text-align: center
    margin-top: 0.3rem
    margin-bottom: 0.3rem
    color: rgba(234, 177, 69, 1)
  .main
    width: 100%
    height: 3.5rem
    margin: 0.2rem auto
    text-align: center
    h1
      text-align: center
      font-size: 0.4rem
      margin-bottom: 0.1rem
      margin-top: 0.2rem
    p
      margin-top: 0.3rem
      margin-bottom: 0.3rem
      margin: 0.3rem auto
      text-align: center
      //color: rgba(234, 177, 69, 1)
      font-size: 0.2rem
    .left
      width: 45%
      height: 100%
      float: left
      position: relative
      img
        height: 100%
        width: 100%
        opacity: 0.6
        transition: all 0.5s
      .summary
        position: absolute
        width: 50%
        height: 1rem
        top: 25%
        left: 20%
        h2
          line-height: 0.3rem
          margin: 0.1rem
          font-size: 0.2rem
        h3
          line-height: 0.3rem
          margin: 0.1rem
          font-size: 0.2rem
        p
          font-size: 0.2rem
      &:hover img
        opacity: 0.2
    .right
      width: 55%
      height: 100%
      float: left
      background-color: rgba(231, 179, 37, 1)
      transition: all 0.5s
      &:hover
        opacity: 1
        background-color: rgba(231, 179, 37, 1)
      h3
        margin: 0.3rem
        font-size: 0.3rem
        font-weight: bold
      p
        width: 70%
        margin: 0rem auto
        line-height: 0.25rem
        font-size: 0.15rem
        color: black
        position: relative
//section4 end